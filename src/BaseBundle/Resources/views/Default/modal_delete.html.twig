<div id="modal-delete" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabel" aria-hidden="true">
  <form action="{{ modal_action }}" method="POST">
    {% if delete_form is defined %}{{ form_rest(delete_form) }}{% endif %}
    <input name="_method" type="hidden" value="DELETE">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">{{ modal_title }}</h3>
    </div>
    <div class="modal-body">
      <p>{{ modal_text }}</p>
    </div>
    <div class="modal-footer">
      <a class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
      <button type="submit" class="btn btn-danger">Delete</button>
    </div>
  </form>
</div>