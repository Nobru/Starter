{% set current_page = 'user' %}
{% extends 'StarterBaseBundle:Default:index.html.twig' %}

{% block mainbar %}
<div class="page-head">
  <div class="bread-crumb">
    <a href="{{ path('admin_dashboard') }}"><i class="icon-home"></i> Home</a>
    <span class="divider">/</span>
    <a href="{{ path('admin_user') }}">Users</a>
    <span class="divider">/</span>
    <span class="bread-current">Show user</span>
  </div>
  <h2 class="pull-left">Show user</h2>
  <div class="clearfix"></div>
</div>
<div class="container-fluid">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
      </tr>
      <tr>
        <th>Username</th>
        <td>{{ entity.username }}</td>
      </tr>
      <tr>
        <th>Name</th>
        <td>{{ entity.name }}</td>
      </tr>
      <tr>
        <th>Email</th>
        <td>{{ entity.email }}</td>
      </tr>
      <tr>
        <th>Is active?</th>
        <td>{% if entity.isActive %}<span class="label label-success">active</span>{% else %}<span class="label label-danger">inactive</span>{% endif %}</td>
      </tr>
    </tbody>
  </table>
</div>
{% endblock %}
