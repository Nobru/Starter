{% set current_page = 'user' %}
{% extends 'StarterBaseBundle:Default:index.html.twig' %}

{% block mainbar %}
  <div class="page-head">
    <div class="bread-crumb">
      <a href="{{ path('admin_dashboard') }}"><i class="icon-home"></i> Home</a> 
      <span class="divider">/</span> 
      <a href="{{ path('admin_plan') }}" class="bread-current">Accounts</a>
    </div>
    <h2 class="pull-left">Edit account</h2>
    <div class="clearfix"></div>
  </div>
  <div class="container-fluid">
    <form action="{{ path('admin_account_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
      <input type="hidden" name="_method" value="PUT" />
      {{ form_widget(edit_form) }}
        <div class="form-buttons">
          <button type="submit" class="btn btn-primary">Save</button> 
          <a href="#modal-delete" role="button" class="btn btn-danger" data-toggle="modal">Delete</a>
          <a href="{{ path('admin_account') }}" class="btn">Back</a>
        </div>
    </form>
{% set modal_title  = 'Delete account' %}
{% set modal_action = path('admin_account_delete', {'id' : entity.id}) %}
{% set modal_text   = 'Do you really want to delete the account?' %}
{% set entity_id    = entity.id %}
        {% include('StarterBaseBundle:Default:modal_delete.html.twig') %}
</div>

{% endblock %}
