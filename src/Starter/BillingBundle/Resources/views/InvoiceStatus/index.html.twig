{% set current_page = 'billing' %}
{% extends 'StarterBaseBundle:Default:index.html.twig' %}

{% block mainbar %}
<div class="page-head">
  <div class="bread-crumb">
    <a href="{{ path('starter_dashboard') }}"><i class="icon-home"></i> Home</a>
    <span class="divider">/</span>
    <a href="{{ path('starter_billing') }}" class="bread-current">Billing</a>
    <span class="divider">/</span>
    <a href="{{ path('starter_billing_invoice') }}" class="bread-current">Invoices</a>
    <span class="divider">/</span>
    <span class="bread-current">Invoice status</span>
  </div>
  <h2 class="pull-left">Invoice status</h2>
  <div class="pull-right">
    <a href="{{ path('starter_billing_invoice_status_new') }}" class="btn btn-primary">Create a new invoice status</a>
  </div>
  <div class="clearfix"></div>
</div>
<div class="container-fluid">
  {% if entities %}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Ispaid</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      {% for entity in entities %}
        <tr>
          <td><a href="{{ path('starter_billing_invoice_status_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
          <td>{{ entity.name }}</td>
          <td>{{ entity.isPaid }}</td>
          <td>
            <a href="{{ path('starter_billing_invoice_status_show', { 'id': entity.id }) }}" class="btn btn-mini btn-warning">show</a>
            <a href="{{ path('starter_billing_invoice_status_edit', { 'id': entity.id }) }}" class="btn btn-mini">edit</a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
  </table>
  {% else %}
  <div style="text-align:center">
    <h3>No invoice status created yet.</h3>
  </div>
  {% endif %}
{% endblock %}
