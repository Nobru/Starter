{% set current_page = 'billing' %}
{% extends 'StarterBaseBundle:Default:index.html.twig' %}

{% block mainbar %}
<div class="page-head">
  <div class="bread-crumb">
    <a href="{{ path('starter_dashboard') }}"><i class="icon-home"></i> Home</a>
    <span class="divider">/</span>
    <a href="{{ path('starter_billing') }}">Billling</a>
    <span class="divider">/</span>
    <a href="{{ path('starter_billing_invoice') }}">Invoices</a>
    <span class="divider">/</span>
    <a href="{{ path('starter_billing_invoice_status') }}">Invoice status</a>
    <span class="divider">/</span>
    <span class="bread-current">Show invoice status</span>
  </div>
  <h2 class="pull-left">Show invoice status</h2>
  <div class="clearfix"></div>
</div>
<div class="container-fluid">
  <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Ispaid</th>
                <td>{{ entity.isPaid }}</td>
            </tr>
        </tbody>
  </table>
</div>
<div class="span12">
  <a href="{{ path('starter_billing_invoice_status') }}" class="btn">Back</a>
  <a href="{{ path('starter_billing_invoice_status_edit', { 'id': entity.id }) }}" class="btn btn-warning">Edit</a>
</div>
{% endblock %}
