{% set current_page = 'billing' %}
{% extends 'StarterBaseBundle:Default:index.html.twig' %}

{% block mainbar %}
<div class="page-head">
  <div class="bread-crumb">
    <a href="{{ path('starter_dashboard') }}"><i class="icon-home"></i> Home</a>
    <span class="divider">/</span>
    <a href="{{ path('starter_billing') }}">Billing</a>
    <span class="divider">/</span>
    <span class="bread-current">Show billing</span>
  </div>
  <h2 class="pull-left">Show billing</h2>
  <div class="clearfix"></div>
</div>
<div class="container-fluid">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
      </tr>
      <tr>
        <th>Account</th>
        <td>{{ entity.account.owner.name }}</td>
      </tr>
      <tr>
        <th>Status</th>
        <td>{% if entity.status %}{{ entity.status.name }}{% endif %}</td>
      </tr>
      <tr>
        <th>Plan</th>
        <td>{{ entity.plan.name }}</td>
      </tr>
      <tr>
        <th>Period</th>
        <td>{{ entity.period.name }}</td>
      </tr>
      <tr>
        <th>Created at</th>
        <td>{{ entity.createdAt|date('Y-m-d') }}</td>
      </tr>
    </tbody>
  </table>
  <div class="button-group">
    <a href="{{ path('starter_billing') }}" class="btn">Back</a>
    <a href="{{ path('starter_billing_edit', { 'id': entity.id }) }}" class="btn btn-warning">Edit</a>
  </div>
{% endblock %}
