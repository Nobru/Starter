{% set current_page = 'user' %}
{% extends 'StarterBaseBundle:Default:index.html.twig' %}

{% block mainbar %}
  <div class="page-head">
  <div class="bread-crumb">
    <a href="{{ path('starter_role') }}"><i class="icon-home"></i> Home</a> 
    <span class="divider">/</span> 
    <a href="{{ path('starter_role') }}" class="bread-current">Role</a>
  </div>
  <h2 class="pull-left">New role</h2>
  <div class="clearfix"></div>
  </div>
  <div class="container-fluid">

    <form action="{{ path('starter_role_create') }}" method="post" {{ form_enctype(form) }}>

      {{ form_widget(form) }}

      <p>
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="{{ path('starter_account') }}" class="btn">Back</a>
      </p>
    </form>
  </div>
{% endblock %}
