{% set current_page = 'user' %}
{% extends 'StarterBaseBundle:Default:index.html.twig' %}

{% block mainbar -%}
  <div class="page-head">
  <div class="bread-crumb">
    <a href="{{ path('starter_dashboard') }}"><i class="icon-home"></i> Home</a>
    <span class="divider">/</span>
    <a href="{{ path('starter_role') }}" class="bread-current">Role</a>
  </div>
  <h2 class="pull-left">Show role</h2>
  <div class="clearfix"></div>
  </div>
  <div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ entity.role }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="span12">
    <a href="{{ path('starter_role') }}" class="btn">Back</a>
    <a href="{{ path('starter_role_edit', { 'id': entity.id }) }}" class="btn btn-warning">Edit</a>
    </div>
  </div>
  </div>

{% endblock %}
