<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin_user.encoder.class">Starter\UserBundle\Service\Encoder</parameter>
        <parameter key="admin_user.account.class">Starter\UserBundle\Service\Account</parameter>
    </parameters>

    <services>
        <service id="admin_user.encoder" class="%admin_user.encoder.class%">
        </service>
        <service id="admin_user.account" class="%admin_user.account.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="admin_user.encoder" />
            <argument type="service" id="admin_billing.billing" />
        </service>
    </services>

</container>
